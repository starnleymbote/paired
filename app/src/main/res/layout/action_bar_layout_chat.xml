<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
         android:layout_height="54dp"
        android:gravity="clip_vertical"
        android:background="@color/colorPrimary"
>
    <ImageView
            android:id="@+id/imgLogo"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="-74dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="-74dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/paired_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_alignParentLeft="true" android:contentDescription="@string/na"/>
    <TextView
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentTop="false"
            android:id="@+id/tvTitle"
            android:paddingStart="2dp"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Small"
            android:text="@string/app_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"/>
    <TextView
            android:id="@+id/tvLastSeenUser"
            android:layout_below="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Seen: 11-11-2019 00:00:00"
            android:textSize="10sp"
            android:paddingStart="32dp"
            android:textColor="@color/linen"
            tools:ignore="SmallSp"/>

</RelativeLayout>