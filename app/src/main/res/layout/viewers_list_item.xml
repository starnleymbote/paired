<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:layout_margin="2dp"
              android:background="@drawable/chat_listitem_bg"
              android:focusable="true"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              android:layout_height="wrap_content">
    <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/imgProfilePic"
                android:src="@drawable/woman128"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/na"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="50dp">
            <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="Budida"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    tools:ignore="RtlSymmetry"/>
            <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:paddingLeft="40dp"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:text="Views Count: 1"
                        android:id="@+id/tvViewsCount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingStart="4dp"
                        tools:ignore="RtlHardcoded,RtlSymmetry"/>
                <TextView
                        android:textAlignment="textEnd"
                        android:textSize="12sp"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:text="21-01-2019"
                        android:id="@+id/tvChatDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
