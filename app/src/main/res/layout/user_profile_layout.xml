<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:id="@+id/profileLayout"
                android:background="@drawable/profile_bg"
                android:layout_height="match_parent">

<ScrollView
        android:id="@+id/profileViewDetails"
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
           android:layout_alignParentTop="true"
            android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/profileViewDetailsLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
                android:layout_alignParentTop="true"
                android:layout_marginBottom="1dp"
                android:dividerHeight="2pt"
                android:drawSelectorOnTop="true"
                android:id="@+id/imagesListView"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
    <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
            android:id="@+id/pagesIndicator"
            android:layout_below="@+id/imagesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:dotColor="#ff0000"
            app:dotRadius="4dp"
            app:selectedDotRadius="5dp"
            app:selectedDotColor="@color/blue"
    />
    <RelativeLayout

            android:id="@+id/profileDetailsLayout"
            android:layout_below="@+id/pagesIndicator"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/fallingsky"
                android:textColor="@color/tmColor"
                android:textSize="13sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvUserNameProfile"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"/>

        <TextView
                android:layout_centerInParent="true"
                android:paddingRight="4dp"
                android:paddingEnd="4dp"
                android:textSize="11sp"
                android:textStyle="normal"
                android:fontFamily="@font/fallingsky"
                style="@style/TextAppearance.AppCompat.Small"
                android:text=""
                android:id="@+id/tvLikesCountProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp"
                android:textColor="@color/tmColor"
               />


        <TextView
                android:fontFamily="@font/fallingsky"
                android:textColor="@color/tmColor"
                android:textSize="12sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:text=""
                android:id="@+id/tvUserAgeProfile"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              />
    </RelativeLayout>

    <TextView
            android:layout_below="@+id/profileDetailsLayout"
            android:paddingLeft="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center"
            android:text="About"
            android:id="@+id/tvUserBioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingStart="8dp"/>
    <TextView
            android:layout_below="@+id/tvUserBioTitle"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="13sp"
            android:textStyle="normal"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_gravity="center"
            android:text=""
            android:id="@+id/tvUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
                android:layout_below="@+id/tvUserBio"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Marital Status"
                android:id="@+id/tvMaritalStatusTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvMaritalStatusTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvUserMarital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <TextView
                android:layout_below="@+id/tvUserMarital"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Sexual Orientation"
                android:id="@+id/tvSexualOrientationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvSexualOrientationTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvUserOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <TextView
                android:layout_below="@+id/tvUserOrientation"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Smoking"
                android:id="@+id/tvSmokingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvSmokingTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvSmoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />


        <TextView
                android:layout_below="@+id/tvSmoke"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Drinking"
                android:id="@+id/tvDrinkingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvDrinkingTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <TextView
                android:layout_below="@+id/tvDrink"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Education"
                android:id="@+id/tvEducationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvEducationTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <TextView
                android:layout_below="@+id/tvEducation"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Religion"
                android:id="@+id/tvReligionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvReligionTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvReligion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />


        <TextView
                android:layout_below="@+id/tvReligion"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Ethnicity"
                android:id="@+id/tvEthnicityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"/>
        <TextView
                android:layout_below="@+id/tvEthnicityTitle"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textSize="13sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvEthnicity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <LinearLayout
                android:layout_below="@+id/tvEthnicity"
                android:id="@+id/locationLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_gravity="center"
                    android:text="@string/location"
                    android:id="@+id/tvUserLocTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"/>

            <ImageButton
                    android:id="@+id/btnProfileMap"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/white"
                    android:src="@drawable/world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    <TextView
            android:layout_below="@+id/locationLayout"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="12sp"
            android:paddingBottom="32dp"
            android:textStyle="normal"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_gravity="center"
            android:text=""
            android:id="@+id/tvUserLocationProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>
</ScrollView>
    <RelativeLayout
            android:id="@+id/btnsLayoutProfile"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/btnsLayout"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <ImageButton
                    android:id="@+id/btnChatProfile"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/white"
                    android:src="@drawable/chat5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                   />

            <ImageButton
                    android:id="@+id/btnVideoCall"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/white"
                    android:src="@drawable/videocalllarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
            />

            <ImageButton
                    android:id="@+id/btnLikeUserProfile"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/white"
                    android:src="@drawable/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
            />
            <ImageButton
                    android:background="@color/white"
                    android:id="@+id/btnCloseProfile"
                    android:src="@drawable/backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_below="@+id/btnsLayout"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="@string/bannerAdUnit">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
