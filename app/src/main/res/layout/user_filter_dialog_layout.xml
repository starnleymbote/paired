<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
       >


        <TextView
                android:visibility="visible"
                android:padding="8dp"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Who Can Start Chat With You?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    <TextView
            android:padding="4dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="Minimum Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


            <Spinner
                    style="@style/SpinnerThemeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spinnerChatAgeMin"
            />
    <TextView
            android:padding="4dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="Maximum Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


            <Spinner
                    style="@style/SpinnerThemeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spinnerChatAgeMax"
            />
    <TextView
            android:padding="4dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="User\'s Sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <Spinner
            android:entries="@array/chatSex"
            style="@style/SpinnerThemeTwo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinnerChatSex"
    />

    <TextView
            android:padding="4dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="User Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <Spinner
            android:entries="@array/chatUserType"
            style="@style/SpinnerThemeTwo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinnerChatUserType"
    />
        <Button
                android:drawableStart="@drawable/cloudsave"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:background="@drawable/mainbtn_bg"
                android:textAllCaps="false"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSaveSettings"
        />
    <Button
            android:drawableStart="@drawable/close"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:background="@drawable/mainbtn_bg"
            android:textAllCaps="false"
            android:text="Close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelSettings"
    />
    </LinearLayout>


