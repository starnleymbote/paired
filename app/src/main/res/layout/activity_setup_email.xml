<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="@color/tmColor"
        tools:context=".SetupEmailActivity">

    <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/tvTitle"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/setup_recovery_email"
            android:textAlignment="center"
            android:layout_width="match_parent"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/tvTitle"
            android:id="@+id/editEmail"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:hint="Enter Your Email"
            android:drawableLeft="@drawable/email"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <EditText
            android:layout_below="@+id/editEmail"
            android:id="@+id/editEmailTwo"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:hint="Re-Enter Your Email"
            android:drawableLeft="@drawable/email"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
           android:layout_marginBottom="8dp"
/>

    <Button
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/cloudsave"
            android:id="@+id/btnSaveEmail"
            android:layout_below="@+id/editEmailTwo"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btnform_bg"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:text="Send"
            android:onClick="saveEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/cloudsave"
    />
    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewRegister"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/bannerAdUnit">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>

