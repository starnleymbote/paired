<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:layout_marginBottom="1dp"
              android:padding="0dp"
              android:background="@drawable/user_bg"
              android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="1dp"
            android:dividerHeight="2pt"
            android:drawSelectorOnTop="true"
            android:id="@+id/userImagesListView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
            android:id="@+id/pagesIndicatorTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dotColor="#ff0000"
            app:dotRadius="2dp"
            app:selectedDotRadius="3dp"
            app:selectedDotColor="@color/blue"
    />
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:paddingLeft="4dp"
                android:textColor="@color/tmColor"
                android:textSize="13sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvUserName"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:paddingStart="4dp"/>
        <TextView
                android:paddingRight="4dp"
                android:textColor="@color/tmColor"
                android:textSize="12sp"
                android:textStyle="normal"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvUserAge"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:paddingEnd="4dp"/>
    </RelativeLayout>
    <TextView
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="12sp"
            android:textStyle="normal"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_gravity="center"
            android:text=""
            android:id="@+id/tvUserLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"/>
    <TextView
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:textSize="11sp"
            android:textStyle="normal"
            android:fontFamily="@font/fallingsky"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_gravity="end"
            android:text=""
            android:id="@+id/tvLikesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
    <RelativeLayout
            android:background="@drawable/list_btns_bg"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/btnChat"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:src="@drawable/chat5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"/>
        <ImageButton
                android:id="@+id/btnMap"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:src="@drawable/world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageButton
                android:id="@+id/btnLikeProfile"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@color/white"
                android:src="@drawable/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
