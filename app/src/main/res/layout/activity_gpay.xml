<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".GPayActivity"
        android:background="@color/tmColor"
        android:padding="8dp"
>
    <TextView
            android:visibility="gone"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/tvRetryTitle"
            android:text="To Re-try If Failed, Touch Button Below"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
  <Button
          android:visibility="gone"
          android:padding="8dp"
          android:focusable="true"
          android:clickable="true"
          android:foreground="?android:attr/selectableItemBackground"
          android:drawableStart="@drawable/gpay"
          android:textColor="@color/black"
          android:layout_marginTop="5dp"
          android:background="@drawable/mainbtn_bg"
          android:id="@+id/btnGpay"
          android:text="Google Pay"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:onClick="sendGPay"
          android:drawableLeft="@drawable/gpay"/>


    <TextView
            android:padding="24dp"
            android:gravity="center"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/tvMsg"
            android:text="@string/gpay_instructions"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_gravity="center" />
</LinearLayout>