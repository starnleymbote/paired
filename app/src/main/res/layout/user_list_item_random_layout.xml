<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_gravity="center"
              android:layout_margin="4dp"
              android:padding="0dp"
              android:focusable="true"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              android:background="@drawable/user_bg"
              android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/imgOfUser"
            android:layout_gravity="center"
            android:src="@drawable/user_female"
                android:layout_width="wrap_content"
               android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:minWidth="100dp"
               android:contentDescription="@string/na"/>
    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:visibility="gone"
                android:id="@+id/imgBadge"
                android:layout_gravity="center"
                android:src="@drawable/diamond2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/na"/>
        <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"
                android:text="Budida"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tvTheName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

        />


    </LinearLayout>
    <TextView
            android:gravity="center"
            android:textColor="@color/sentBg"
            android:textSize="7sp"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_gravity="center"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvOnlineStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="SmallSp"/>

</LinearLayout>
