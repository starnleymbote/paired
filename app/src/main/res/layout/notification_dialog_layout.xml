<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
       >


        <TextView
                android:padding="8dp"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Allow or Off Notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


   <LinearLayout
           android:padding="6dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                     android:layout_weight="1"
                     android:text="Missed Calls Notifications"
                     android:layout_height="wrap_content"/>
                <ToggleButton
                        android:background="@drawable/btn_bg"
                   android:id="@+id/btnCallsNoti"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
            android:padding="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="Incoming Video Calls Ringtone"
                  android:layout_height="wrap_content"/>
        <ToggleButton
                android:background="@drawable/btn_bg"
                android:id="@+id/btnCallTone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:padding="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="Profile Likes Notifications"
                  android:layout_height="wrap_content"/>
        <ToggleButton
                android:background="@drawable/btn_bg"
                android:id="@+id/btnLikeNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:padding="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="Profile Visitors Notifications"
                  android:layout_height="wrap_content"/>
        <ToggleButton
                android:background="@drawable/btn_bg"
                android:id="@+id/btnVisitorNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:padding="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="Chats Notifications"
                  android:layout_height="wrap_content"/>
        <ToggleButton
                android:background="@drawable/btn_bg"
                android:id="@+id/btnChatsNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:background="@drawable/mainbtn_bg"
            android:textAllCaps="false"
            android:text="Close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelWindow"
    />
</LinearLayout>


