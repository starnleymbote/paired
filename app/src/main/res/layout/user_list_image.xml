<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:layout_margin="0dp"
              android:background="@drawable/img_bg"
              android:layout_height="wrap_content">
    <ImageView
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/imgProfileUser"
            android:src="@drawable/woman128"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="m"
            tools:ignore="UnusedAttribute"
            android:contentDescription="@string/na"/>
    <Button
            android:visibility="gone"
            android:textAllCaps="false"
            android:background="@color/white"
            android:id="@+id/btnPremium"
            android:drawableStart="@drawable/premium"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:text="Premium User"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_height="26dp"/>
    <Button
            android:visibility="visible"
            android:textAllCaps="false"
            android:background="@color/white"
            android:id="@+id/btnFree"
            android:drawableStart="@drawable/freeaccount"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:text="Free User"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_height="26dp"/>
</FrameLayout>
